{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "outDir": "dist/",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["../common/*"]/*,
      "@framework*//*": [
        "../../../framework/server*//*"
      ],
      "@framework-common*//*": [
        "../../../framework/common*//*"
      ]*/
    }
  },
  "exclude": [
    "node_modules"
  ]
}